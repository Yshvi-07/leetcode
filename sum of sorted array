#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	int s=0;
	while(t--){
	    int n;
	    cin>>n;
	    int a[n];
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	        
	    }
	    sort(a,a+n);
	     s=a[0]+a[1];
	    
	    
	    
	    
	    cout<<s<<endl;
}
	return 0;
}
